<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gishan.volumemeasurementtool">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SmartTruckApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden">

            <intent-filter android:label="@string/app_short_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".measurements.volumetric.MeasurementActivity"
            android:label="@string/title_activity_measurement"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".measurements.volumetric.BlueprintActivity"
            android:label="@string/title_activity_blueprint"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".simulation.SimulationActivity"
            android:label="@string/title_activity_simulation"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".recommendations.RecommendToAnotherActivity"
            android:label="@string/title_recommendations"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".notifications.NotificationsActivity"
            android:label="@string/title_notifications"
            android:screenOrientation="landscape" />
        <activity
            android:name=".measurements.volumetric.SummaryActivity"
            android:label="@string/title_activity_summary"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".measurements.area.TruckSpaceActivity"
            android:label="@string/title_activity_truck_space"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>